<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.example.severin.kersti">

    <uses-permission android:name="android.permission.INTERNET" />

    <!-- To auto-complete the email text field in the login form with the user's emails -->
    <uses-permission android:name="android.permission.GET_ACCOUNTS" />
    <uses-permission android:name="android.permission.READ_PROFILE" />
    <uses-permission android:name="android.permission.READ_CONTACTS" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />

    <application
        android:name=".Kersti"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher_kersti"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme"
        tools:ignore="GoogleAppIndexingWarning">
        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".LoginActivity" />
        <activity
            android:name=".RegisterActivity1"
            android:parentActivityName=".LoginActivity" />
        <activity
            android:name=".LoginActivity2"
            android:parentActivityName=".LoginActivity" />
        <activity
            android:name=".UserSettings"
            android:parentActivityName=".MainActivity" />
        <activity
            android:name="com.theartofdev.edmodo.cropper.CropImageActivity"
            android:theme="@style/Base.Theme.AppCompat" />
        <activity android:name=".RegisterActivity2" />
        <activity
            android:name=".RegisterActivity3"
            android:parentActivityName=".RegisterActivity2" />
        <activity
            android:name=".SearchActivity"
            android:parentActivityName=".MainActivity" />
        <activity
            android:name=".TagActivity"
            android:parentActivityName=".UserSettings" />
        <activity
            android:name=".ShowTagActivity"
            android:parentActivityName=".SearchActivity" />
        <activity
            android:name=".ProfilActivity"
            android:parentActivityName=".SearchActivity" />
        <activity
            android:name=".ProfilTagActivity"
            android:parentActivityName=".ProfilActivity" />
        <activity
            android:name=".FriendActivity"
            android:parentActivityName=".MainActivity" />
        <activity
            android:name=".ChatActivity"
            android:parentActivityName=".MainActivity" />
        <activity android:name=".AnfragenActivity"
            android:parentActivityName=".MainActivity"></activity>
    </application>

</manifest>